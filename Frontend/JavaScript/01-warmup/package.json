{
  "private": true,
  "name": "js-task-00",
  "version": "1.0.0",
  "description": "Задача №{task.order} «{task.name}»",
  "scripts": {
    "start": "node ./src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.js\"",
    "lint-fix": "eslint --fix \"**/*.js\"",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@yandex-lms-ext/eslint-config-base": "1.0.5",
