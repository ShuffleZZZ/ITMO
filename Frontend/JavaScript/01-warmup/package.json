    "eslint": "6.4.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm-run-all lint test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
