{
  "private": true,
  "name": "js-task-05",
  "version": "1.0.0",
  "description": "Задача №5 «Свадьба Аркадия»",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "node src/index",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.js\"",
    "lint-fix": "eslint --fix \"**/*.js\"",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "24.0.23",
    "@yandex-lms-ext/eslint-config-base": "1.2.0",
    "@yandex-lms-ext/prettier-config": "1.0.2",
    "eslint": "6.6.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm-run-all lint test",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
